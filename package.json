{
  "name": "travi",
  "description": "Matt Travi",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "main": "travi.json",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "repository": "travi/npm-travi",
  "bugs": "https://github.com/travi/npm-travi/issues",
  "homepage": "https://github.com/travi/npm-travi#readme",
  "scripts": {
    "lint:md": "globstar --node -- markdownlint **/*.md",
    "lint:json": "jsonlint travi.json",
    "test": "run-s lint:*",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm test",
    "preversion": "npm test",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "cz-conventional-changelog": "2.1.0",
    "globstar": "1.0.0",
    "husky": "0.15.0-rc.2",
    "jsonlint": "1.6.3",
    "markdownlint-cli": "0.7.1",
    "npm-run-all": "4.1.2",
    "semantic-release": "15.1.3",
    "validate-commit-msg": "2.14.0"
  }
}
