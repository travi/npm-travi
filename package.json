  },
  "devDependencies": {
    "cz-conventional-changelog": "2.0.0",
    "globstar": "1.0.0",
    "husky": "0.13.2",
    "markdownlint-cli": "0.2.0",
    "npm-run-all": "4.0.2",
    "validate-commit-msg": "2.11.2"
  }
}
